<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"

    tools:context=".Body.Authentication.SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/llayout"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_200"
        android:fontFamily="@font/happy_monkey"
        android:gravity="center"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/ll_fullname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Username"
                app:boxStrokeColor="@color/dark_skyblue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/dark_skyblue"
                app:startIconDrawable="@drawable/ic_round_person_24">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/happy_monkey"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/skyblue" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/ll_mobno"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Contact no."
                app:boxStrokeColor="@color/dark_skyblue"
                app:endIconMode="clear_text"
                 android:layout_marginTop="5dp"
                app:hintTextColor="@color/dark_skyblue"
                app:prefixText="+91"
                app:prefixTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_round_phone_24">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/happy_monkey"
                    android:inputType="number"
                    android:textColor="@color/skyblue" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/ll_email_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Email"
                android:layout_marginTop="5dp"

                app:boxStrokeColor="@color/dark_skyblue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/dark_skyblue"
                app:startIconDrawable="@drawable/ic_round_email_24">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/happy_monkey"

                    android:inputType="textEmailAddress"
                    android:textColor="@color/skyblue" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ll_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Password"

                app:counterEnabled="true"
                app:counterMaxLength="10"

                android:layout_marginTop="5dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/dark_skyblue"
                app:startIconDrawable="@drawable/ic_round_lock_24">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/happy_monkey"
                    android:inputType="textPassword"
                    android:textColor="@color/skyblue" />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/happy_monkey"
        android:onClick="registerMe"
        android:text="Next"
        android:backgroundTint="@color/orange"
        android:textStyle="bold"
        app:cornerRadius="25dp" />
</RelativeLayout>