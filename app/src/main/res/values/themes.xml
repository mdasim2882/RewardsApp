<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RewardsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/happy_monkey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.JodiMilan.TextInputLayout." parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.JodiMilan.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/pink</item>

        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/pink</item>
    </style>

    <style name="TextAppearance.JodiMilan.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>


    <style name="Widget.RewardsApp.TextInputLayout." parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.RewardsApp.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/dark_skyblue</item>
        <item name="font">@font/happy_monkey</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/dark_skyblue</item>
    </style>

    <style name="TextAppearance.RewardsApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/dark_skyblue</item>
        <item name="font">@font/happy_monkey</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>
    <style name="Theme.RewardsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RewardsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RewardsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
    </style>

    <style name="AppLayoutGrowFast.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
    </style>
    <color name="skyblue">#5970F7</color>
    <color name="dark_skyblue">#007AB1</color>
    <color name="textInputOutlineColor">#F51100</color>
    <color name="pink">#FF7892</color>
</resources>